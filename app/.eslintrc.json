{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-undef": "off",
        "no-console": "off",
        "no-unused-vars": "off",
        "no-cond-assign": "off",
        "no-useless-escape": "off",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "overrides": [
    {
      "files": ["gulpfile.js"],
      "rules": {
        "semi": [
            "error",
            "never"
        ] 
      }
    }
  ]
}
